# Login Classes
<AdminLogin>:
    name: "AdminLogin"

    username: username
    password: password

    FloatLayout:
        Label:
            text: "Admin Login Form"
            font_size: 30
            color: (0.4, 0.4, 0.4,1)
            pos_hint: {"x": 0.02,"top": 1.25}


        GridLayout:   
            cols: 2 
            size_hint: (0.6,0.18)   
            pos_hint: {"x":0.15, "top": 0.65}
            Label:
                text: "Username: "
                color: (51/255, 153/255, 255/255,1)
            TextInput:
                id: username
                multiline: False
                background_color: (1,1,1,1)

            Label:
                text: "Password: "
                color: (51/255, 153/255, 255/255,1)
            TextInput:
                id: password
                password: True
                multiline: False

        Button: 
            text: "Don't have an account? Sign Up."
            font_size: 15
            color: (51/255, 153/255, 255/255,1)
            background_color: (1,1,1,0)
            underline: True
            size_hint: (0.3,0.08)
            pos_hint: {"x":0.36, "top": 0.35}
            on_release:
                app.root.transition = SlideTransition(direction="right")
                app.root.current = "AdminSignUp"
            
        Button: 
            text: "Submit"
            font_size: 18
            color: (1, 1, 1,1)
            italic: True
            background_color: (0/255, 153/255, 204/255, 1)
            size_hint: (0.3,0.08)
            pos_hint: {"x":0.36, "top": 0.25}
            on_release: 
                app.root.transition = SlideTransition(direction = "left")
                root.login_to_database()
    

