# AdminAfterLogin Class
<AdminAfterLogin>:
    name: "AdminAfterLogin"
    
    FloatLayout:      

        Button:
            size_hint: (None, None)
            width: 150
            height: self.width
            pos_hint: {"x": 0.22, "top": 0.55}
            background_normal: "resources/functions.png"
            background_down: "resources/functions_down.png"
            on_release: root.go_to_functions()

        Button:
            size_hint: (None, None)
            width: 150
            height: self.width
            pos_hint: {"x": 0.62, "top": 0.55}
            background_normal: "resources/settings.jpg"
            background_down: "resources/settings_down.jpg"
            on_release: root.go_to_settings()
                

        Button:
            size_hint: (None, None)
            width: 150
            height: self.width
            pos_hint: {"x": 0.22, "top": 0.32}
            background_normal: "resources/hospital.png"
            background_down: "resources/hospital_down.png"
            on_release:
                app.root.transition = SlideTransition(direction="left")
                app.root.current = "AdminAboutHospital"

        Button:
            size_hint: (None, None)
            width: 150
            height: self.width
            pos_hint: {"x": 0.62, "top": 0.32}
            background_normal: "resources/docs.png"
            background_down: "resources/docs_down.png"
            on_release:
                app.root.transition = SlideTransition(direction="left")
                app.root.current = "AdminDocumentation"


        Carousel:
            direction: "right"
            size_hint: (None, None)
            width: 600
            height: 200
            pos_hint: {"x": 0.13, "top": 0.85}
            loop: True
            scroll_timeout: 100
            Image:
                source: "resources/carousel1.png"
            Image:
                source: "resources/carousel2.png"
            Image:
                source: "resources/carousel3.png"




