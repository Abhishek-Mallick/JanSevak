# SignUp Classes
<GetStarted>:
    name: "GetStarted"
    FloatLayout:
        Image:
            source: 'resources/hms_logo.png'
            size_hint: (0.8,0.525)
            pos_hint: {"x": 0.11, "top": 0.85}
        
        Button:
            text: "Lets Start!"
            font_size: 15
            color: (1, 1, 1,1)
            italic: True
            background_color: (0/255, 153/255, 204/255, 1)
            size_hint: (0.3,0.08)
            pos_hint: {"x":0.36, "top": 0.35}
            on_release:
                root.start_program()

        Button:
            text: "Ahammad Shawki 8"
            font_size: 15
            color: (51/255, 153/255, 255/255,1)
            underline: True
            background_color: (1,1,1,0)
            size_hint: (0.3,0.08)
            pos_hint: {"x":0.36, "top": 0.2}
            on_release:
                root.go_to_website()



